<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- <link rel="icon" href="../../../../favicon.ico"> -->
  <title>Домофоны - <%= title %></title>

  <% include ../../common/bootstrap_css.ejs %>
  <link href="/theme.css" rel="stylesheet">
  <link href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css"
    rel="stylesheet">
</head>

<body>

  <% include ../../common/full_menu.ejs %>

  <div class="container">
    <div class="form-header">
      <h3><%= title %></h3>
      <% if (Object.keys(errors).length > 0) { %>
      <h3><span class="text-danger">Выявлены ошибки:</span></h3>
      <ul>
        <% for (var key in errors) { %>
        <li><span class="text-danger"><%= errors[key].msg %></span></li>
        <% }; %>
      </ul>
      <% } %>
    </div>
    <div class="card">
      <form method="post" action="/fines/save" novalidate>

        <input type="text" hidden name="box" id="box">

        <div class="well">
          <div class="card-body">

            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label for="createDate" class="control-label">Создано</label>
                  <div class="input-group date-picker" id="dtCreateDate">
                    <input type="text" class="form-control" name="createDate" id="createDate"
                      value="<%= model.createDate ? moment(model.createDate).format( 'DD.MM.YYYY' ) : moment(new Date()).format( 'DD.MM.YYYY' )  %>">
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label for="contract">Договор</label>
                  <input type="text" class="form-control" id="contract" name="contract" placeholder=""
                    value="<%= model.contract.normal %>">
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label for="extendedContract">Договор ТО</label>
                  <input type="text" class="form-control" id="extendedContract" name="extendedContract"
                    placeholder="" value="<%= model.contract.prolonged %>">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label for="fullAddress">Полный адрес</label>
                  <input type="text" class="form-control" id="fullAddress" name="fullAddress"
                  data-city-id="<%= model.address.city.id %>" data-street-id="<%= model.address.street.id %>"
                  data-house-id="<%= model.address.house.id %>"
                  placeholder="" value="<%= model.fullAddress() %>">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-1">
                <div class="form-group">
                  <label for="porch">Подъезд</label>
                  <input type="text" class="form-control" id="porch" name="porch" placeholder=""
                    value="<%= model.porch %>">
                </div>
              </div>
              <div class="col-md-1">
                <div class="form-group">
                  <label for="apartment">Квартира</label>
                  <input type="text" class="form-control" id="apartment" name="apartment"
                  data-partment-id="<% model.apartment_id %>"
                  placeholder="" value="<%= model.apartment.number %>">
                </div>
              </div>
              <div class="col-md-1">
                <div class="form-group">
                  <label for="letter">Буква</label>
                  <select class="form-control" id="letter" name="letter">
                    <% for (var cnt = 0, max = enumApartmentLetters.length; cnt < max; cnt++) { %>
                    <option value="<%= cnt %>"
                      <%= +model.apartment.letter === cnt ? ' selected' : '' %>>
                      <%= enumApartmentLetters[cnt] %></option>
                    <% } %>
                  </select>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label for="amount">Сумма к оплате</label>
                  <input type="text" class="form-control" id="amount" name="amount" placeholder=""
                    value="<%= model.amount.toFixed(2) %>">
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <label for="dateOfPayment" class="control-label">Оплачено</label>
                  <div class="input-group date-picker" id="dtDateOfPayment">
                    <input type="text" class="form-control" name="dateOfPayment" id="dateOfPayment" readonly
                      value="<%= model.paymentDate ? moment(model.paymentDate).format( 'DD.MM.YYYY' ) : '' %>">
                    <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <button submit class="btn btn-success" name="save" id="save" onclick="beforeSave()">Записать</button>
            <button class="btn btn-info" name="printReceipt" id="printReceipt">Квитанция</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/bower_components/bootstrap3-typeahead/bootstrap3-typeahead.js"></script>
  <script src="/bower_components/moment/min/moment-with-locales.min.js"></script>
  <script src="/bower_components/bootstrap/js/transition.js"></script>
  <script src="/bower_components/bootstrap/js/collapse.js"></script>
  <script src="/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
  <script src="/bower_components/axios/dist/axios.min.js"></script>
  <script src="/js/fine.js"></script>
</body>

</html>